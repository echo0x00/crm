<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <title>{% block title %}Вам газета{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
    and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.cerulean.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/chosen.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/font-awesome/css/font-awesome.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/datepicker.min.css') }}">

        <!--<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
        -->
    {% endblock %}
</head>
<body>
{% if app.user %}
    <div class="d-flex flex-column flex-md-row align-items-center p-1 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <div class="container-fluid">
            <nav style="margin-left: -10px;" class="navbar px-0 navbar-expand-lg navbar-light">
                <h5 class="my-0 mr-md-auto font-weight-normal">
                    <a class="navbar-brand" href="/">
                        <img style="max-height: 45px;" src="{{ asset('assets/logo_crm.png') }}">
                    </a>
                </h5>
                <a class="px-3 text-dark" href="{{ path('orders') }}">
                    <i class="fa fa-list-alt" aria-hidden="true"></i> Заказы
                </a>
                <a class="px-3 text-dark" href="{{ path('agents') }}">
                    <i class="fa fa-user" aria-hidden="true"></i> Покупатели
                </a>
                <div class="nav-item dropdown">
                    <a class="px-3 text-dark nav-link dropdown-toggle" href="#" id="dropdownArchive" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-archive" aria-hidden="true"></i> Архив
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownArchive">
                        <a class="dropdown-item" href="{{ path('archive') }}">Остатки</a>
                        <a class="dropdown-item" href="{{ path('nomen') }}">Номенклатура</a>
                    </div>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="px-3 text-dark" href="{{ path('users') }}"><i class="fa fa-users" aria-hidden="true"></i>
                        Пользователи</a>
                {% endif %}
                <a class="btn btn-outline-secondary" href="{{ path('app_logout') }}"><i class="fa fa-sign-out" aria-hidden="true"></i>
                    Выйти</a>
            </nav>
        </div>
    </div>
{% endif %}
{% block body %}{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
            integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
    <script src="{{ asset('assets/js/datepicker.min.js') }}"/>
    <script src="{{ asset('assets/js/ru.js') }}"/>
{#    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>#}
{#    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.ru.min.js"></script>#}
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
            integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"
            integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
    <script src="https://cdn.rawgit.com/RobinHerbots/Inputmask/3.2.7/dist/min/jquery.inputmask.bundle.min.js" type="text/javascript"></script>
    <script src="https://cdn.rawgit.com/andr-04/inputmask-multi/1.2.0/js/jquery.inputmask-multi.js"></script>
    <script src="{{ asset("assets/js/app.js") }}"></script>
    <script src="{{ asset("assets/js/chosen.jquery.min.js") }}"></script>
{% endblock %}
</body>
</html>