{% extends 'base.html.twig' %}

{% block title %}Покупатель{% endblock %}

{% block body %}
    <div class="container">
        <div class="row no-gutters">
            <div class="col-12">
                <h2 class="lead text-center mt-5">
                    {{ title }}
                </h2>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row no-gutters justify-content-center align-items-center mt-5">
            <div class="col-6">
                <form name="agents" method="post">
                    <div class="form-group">
                        <label for="agent_fio" class="required">ФИО<span class="small text-muted">, например Иванов Иван Иванович</span></label>
                        {{ form_widget(agent_edit.fio, {'attr': {'class': 'form-control', 'id': 'agent_fio', 'required': 'required'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="agent_email" class="required">Email<span class="small text-muted">, например crm@vamgazeta.ru</span></label>
                        {{ form_widget(agent_edit.email, {'attr': {'class': 'form-control', 'id': 'agent_email', 'required': 'required'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="agent_phone" class="required">Телефон<span class="small text-muted">, в формате +7 (999) 123-45-55</span></label>
                        {{ form_widget(agent_edit.phone, {'attr': {'class': 'form-control', 'id': 'agent_phone', 'required': 'required'}, 'type' : 'tel'}) }}
                        <p class="text-muted" id="descr"></p>
                    </div>
                    <div class="form-group">
                        <label for="agent_city">Регион<span class="small text-muted">, определяется автоматически при заказе</span></label>
                        {{ form_widget(agent_edit.city, {'attr': {'class': 'form-control', 'id': 'agent_city', 'required': 'required'}}) }}
                        <p class="small text-muted">* Параметр нужен для корректного определения часового пояса</p>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary mb-5 mt-4 btn">Сохранить</button>
                    </div>
                    {{ form_row(agent_edit._token) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}